<Window x:Class="StylesDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StylesDemo"
        mc:Ignorable="d"
        Title="Авторизация" 
        Height="250" Width="450"
        WindowState="Normal"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="Style_Header" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="FontWeight" Value="Heavy"/>
            <Setter Property="Foreground" Value="DarkRed"/>
        </Style>
        <Style x:Key="Style_Default" TargetType="Control">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style x:Key="Style_LabelInput" TargetType="Label"
               BasedOn="{StaticResource Style_Default}">
            <Setter Property="Foreground" Value="DarkBlue"/>
        </Style>
        <Style x:Key="Style_Input" TargetType="TextBox"
               BasedOn="{StaticResource Style_Default}">
            <Setter Property="Foreground" Value="DarkMagenta"/>
        </Style>
        
        <Style x:Key="Style_ButtonDefault" TargetType="Button"
               BasedOn="{StaticResource Style_Default}">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            
            <Setter Property="Width" Value="150"/>
            
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style x:Key="Style_ButtonClear" TargetType="{x:Type Button}"
               BasedOn="{StaticResource Style_ButtonDefault}">
            <Setter Property="Background" Value="Red"/>
        </Style>
        <Style x:Key="Style_ButtonAuth" TargetType="{x:Type Button}"
               BasedOn="{StaticResource Style_ButtonDefault}">
            <Setter Property="Background" Value="Green"/>
        </Style>
        
        <Style x:Key="Style_GridInputs" TargetType="{x:Type Grid}">
            <Setter Property="Margin" Value="0 25 0 0"/>
        </Style>
        
        <Style x:Key="Style_StackPanel_Vertical" TargetType="{x:Type StackPanel}">
            <Setter Property="Orientation" Value="Vertical"/>
        </Style>
        <Style x:Key="Style_StackPanel_Buttons" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <StackPanel Style="{StaticResource Style_StackPanel_Vertical}">
        <TextBlock Text="Авторизация" 
                   Style="{StaticResource Style_Header}"/>
        
        <Grid Style="{StaticResource Style_GridInputs}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Label Grid.Row="0" Grid.Column="0"
                   Content="Логин"
                   Style="{StaticResource Style_LabelInput}"/>
            <TextBox Grid.Row="0" Grid.Column="1"
                     Style="{StaticResource Style_Input}"/>
            
            <Label Grid.Row="1" Grid.Column="0"
                   Content="Пароль"
                   Style="{StaticResource Style_LabelInput}"/>
            <TextBox Grid.Row="1" Grid.Column="1"
                     Style="{StaticResource Style_Input}"/>
        </Grid>
        
        <StackPanel Style="{StaticResource Style_StackPanel_Buttons}">
            <Button Content="Очистить"
                    Style="{StaticResource Style_ButtonClear}"/>
            <Button Content="Войти"
                    Style="{StaticResource Style_ButtonAuth}"/>
        </StackPanel>
    </StackPanel>
</Window>
